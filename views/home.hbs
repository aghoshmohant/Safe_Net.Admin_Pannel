<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <style>
    /* General Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      height: 100vh;
      background-color: #f9f9f9;
    }

    /* Sidebar */
    .sidebar {
      width: 250px;
      background-color: #2c3e50;
      color: #ecf0f1;
      padding: 20px;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .sidebar a {
      text-decoration: none;
      color: #ecf0f1;
      padding: 10px;
      margin-bottom: 15px;
      display: block;
      border-radius: 4px;
      transition: background 0.3s;
    }

    .sidebar a:hover {
      background-color: #34495e;
    }

    /* Main Content */
    .main-content {
      flex: 1;
      padding: 20px;
    }

    .header {
      background-color: #34495e;
      color: #fff;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header h1 {
      font-size: 24px;
    }

    .header .actions {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .header .actions span {
      font-size: 18px;
      cursor: pointer;
    }

    .action-buttons {
      margin-top: 20px;
      display: flex;
      gap: 20px;
    }

    .action-buttons button {
      padding: 15px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .action-buttons .add-btn {
      background-color: #27ae60;
      color: white;
    }

    .action-buttons .add-btn:hover {
      background-color: #2ecc71;
    }

    .action-buttons .remove-btn {
      background-color: #e74c3c;
      color: white;
    }

    .action-buttons .remove-btn:hover {
      background-color: #c0392b;
    }

    .admin-table {
      margin-top: 30px;
      width: 100%;
      border-collapse: collapse;
      background-color: white;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .admin-table th, .admin-table td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: left;
    }

    .admin-table th {
      background-color: #34495e;
      color: white;
    }

    .admin-table tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .admin-table tr:hover {
      background-color: #ddd;
    }

    .action-cell button {
      padding: 5px 10px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }

    .action-cell .edit-btn {
      background-color: #3498db;
      color: white;
    }

    .action-cell .edit-btn:hover {
      background-color: #2980b9;
    }

    .action-cell .delete-btn {
      background-color: #e74c3c;
      color: white;
    }

    .action-cell .delete-btn:hover {
      background-color: #c0392b;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <aside class="sidebar">
    <h2>Admin Panel</h2>
    <a href="#">Home</a>
    <a href="#">Add Administrator</a>
    <a href="#">Remove Administrator</a>
    <a href="#">Settings</a>
  </aside>

  <!-- Main Content -->
  <div class="main-content">
    <header class="header">
      <h1>Admin Panel Management</h1>
      <div class="actions">
        <span>ðŸ”” Notifications</span>
        <span>ðŸ‘¤ Profile</span>
      </div>
    </header>

    <section class="content">
      <div class="action-buttons">
        <button class="add-btn">Add Administrator</button>
        <button class="remove-btn">Remove Administrator</button>
      </div>

      <table class="admin-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Designation</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>John Doe</td>
            <td>Collector</td>
            <td class="action-cell">
              <button class="edit-btn">view</button>
              <button class="delete-btn">Delete</button>
            </td>
          </tr>
          <tr>
            <td>Jane Smith</td>
            <td>Village officer</td>
            <td class="action-cell">
              <button class="edit-btn">view</button>
              <button class="delete-btn">Delete</button>
            </td>
          </tr>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>